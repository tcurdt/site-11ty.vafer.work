<!doctype html>
<html lang="{{ language or site.language or "en" }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="description" content="{{ metadata.description }}" />

    <link rel="apple-touch-icon" sizes="180x180"
      href="{{ '/apple-touch-icon.png' | url }}"
    />
    <link rel="icon" type="image/png" sizes="32x32"
      href="{{ '/favicon-32x32.png' | url }}"
    />
    <link rel="icon" type="image/png" sizes="16x16"
      href="{{ '/favicon-16x16.png' | url }}"
    />

    <title>{{ title or site.title or metadata.title }}</title>
    <link rel="stylesheet" href="{{ '/site.css' | url }}" />

    <script src="/prefetch.js" defer></script>

    <link rel="manifest" href="{{ '/site.webmanifest' | url }}" />
    <link rel="canonical" href="{{site.url}}{{page.url}}" />
    <link rel="alternate" href="/articles/feed.xml" type="application/atom+xml" />
    <link rel="me" href="https://mastodon.social/@tcurdt" />
    {% block header %}{% endblock %}
  </head>

  <body class="flex flex-col min-h-screen bg-my-orange font-poppins text-lg/9">

    <nav class="bg-white text-lg">
      <ol class="flex container mx-auto max-w-screen-lg">
        <li class="">
          <a class=""
            {% if page.url == "/" or page.url | hasPrefix("/cv/") %}aria-current="page"{% endif %}
            href="/" >Torsten</a>
        </li>
        <li class="">
          <a class=""
            {% if page.url | hasPrefix("/articles/") %}aria-current="page"{% endif %}
            href="/articles/">Articles</a>
        </li>
        <!--
        <li class="">
          <a class=""
            {% if page.url | hasPrefix("/videos/") %}aria-current="page"{% endif %}
            href="/videos/">Videos</a>
        </li>
        -->
        <li class="">
          <a class=""
            {% if page.url | hasPrefix("/products/") %}aria-current="page"{% endif %}
            href="/products/" >Products</a>
        </li>
      </ol>
    </nav>

    {% block content %}{{ content | safe }}{% endblock %}

    <footer class="bg-my-orange pt-10 text-lg grow">
      <div class="container mx-auto max-w-screen-lg">

        &copy;&nbsp;Torsten&nbsp;Curdt |
        <a href="mailto:{{ site.author.email }}">Email</a> |
        <a href="/likes/">Likes</a> |
        <a href="/legal/">Legal&nbsp;Notice</a> |
        <a href="/privacy/">Privacy&nbsp;Policy</a>

      </div>
    </footer>

  </body>
</html>
