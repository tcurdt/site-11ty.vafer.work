---
type: product
---
{% extends "layouts/base.njk" %}

{% block header %}
<meta property="og:title" content="{{ title }}" />
<meta property="og:description" content="{{ description }}" />
<meta property="og:type" content="product" />
<meta property="og:url" content="{{ site.url }}{{ page.url }}" />
<meta property="og:image" content="{{ site.url }}{{ page.url }}overview.jpg" />
<meta name="twitter:card" content="summary_large_image" />
{% endblock %}

{% block content %}
<main class="bg-white">
  <!-- Hero Section -->
  <section class="container mx-auto max-w-screen-lg px-4 py-16 lg:py-24">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="order-2 lg:order-1">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">{{ title }}</h1>
        <p class="text-xl text-gray-600 mb-8">{{ description }}</p>
        {% if buyUrl %}
        <a href="{{ buyUrl }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white text-lg font-semibold px-8 py-4 rounded-lg transition duration-200 transform hover:scale-105">
          {% if price %}Buy Now - {{ price }}{% else %}Buy Now{% endif %}
        </a>
        {% endif %}
      </div>
      <div class="order-1 lg:order-2">
        <img eleventy:widths="600,800" src="overview.jpg" alt="{{ title }}" class="w-full rounded-lg shadow-lg" />
      </div>
    </div>
  </section>

  <!-- Story Section -->
  {% if story %}
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto max-w-screen-lg px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">The Story</h2>
        {% for paragraph in story %}
        <p class="text-lg text-gray-700 mb-6 leading-relaxed">{{ paragraph }}</p>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Features Section -->
  {% if features %}
  <section class="py-16">
    <div class="container mx-auto max-w-screen-lg px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">What's Included</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for feature in features %}
        <div class="text-center p-6 bg-white rounded-lg shadow-md">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ feature.title }}</h3>
          <p class="text-gray-600">{{ feature.description }}</p>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Testimonials Section -->
  {% if testimonials %}
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto max-w-screen-lg px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">What People Say</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for testimonial in testimonials %}
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="flex items-center mb-4">
            {% for i in range(5) %}
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            {% endfor %}
          </div>
          <p class="text-gray-700 mb-4">"{{ testimonial.quote }}"</p>
          <p class="text-sm text-gray-500 font-medium">{{ testimonial.author }}</p>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}

  <!-- FAQ Section -->
  {% if faq %}
  <section class="py-16">
    <div class="container mx-auto max-w-screen-lg px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto space-y-6">
        {% for item in faq %}
        <details class="bg-white rounded-lg shadow-md">
          <summary class="flex justify-between items-center p-6 cursor-pointer hover:bg-gray-50 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900">{{ item.question }}</h3>
            <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </summary>
          <div class="px-6 pb-6">
            <p class="text-gray-700 leading-relaxed">{{ item.answer }}</p>
          </div>
        </details>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Custom Content -->
  {{ content | safe }}

  <!-- Final CTA Section -->
  {% if buyUrl %}
  <section class="bg-blue-600 py-16">
    <div class="container mx-auto max-w-screen-lg px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to Get Started?</h2>
      <p class="text-xl text-blue-100 mb-8">Join others who have already made the smart choice.</p>
      <a href="{{ buyUrl }}" class="inline-block bg-white text-blue-600 hover:bg-gray-100 text-lg font-semibold px-8 py-4 rounded-lg transition duration-200 transform hover:scale-105">
        {% if price %}Buy Now - {{ price }}{% else %}Buy Now{% endif %}
      </a>
    </div>
  </section>
  {% endif %}
</main>
{% endblock %}
